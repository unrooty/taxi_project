%section.text-center.client_new
  .container
    .row.justify-content-md-center
      .col-md-5
        .order_form_area
          %h2.order-pad-top
            = t('sign_up')
            %h5.alert= alert
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!
            .form-group
              = f.text_field :first_name, placeholder: t('activerecord.attributes.user.first_name'),
                              autofocus: true, class: 'form-control'
            .form-group
              = f.text_field :last_name, placeholder: t('activerecord.attributes.user.last_name'), class: 'form-control'
            .form-group
              .input-group
                %span.input-group-addon +375
                = f.text_field :phone, placeholder: '25-123-45-67', class: 'form-control'
            .form-group
              .input-group.language
                %span.input-group-addon.span-margin #{t('language')}
                -#= f.select :language, User.languages.keys.map {|lang| [lang, lang]}
            .form-group
              = f.email_field :email, class: 'form-control', placeholder: 'Email'
            .form-group
              = f.password_field :password, autocomplete: 'off', class: 'form-control',
                                 placeholder: "#{t('activerecord.attributes.user.password')} (#{@minimum_password_length} #{t('characters_minimum')})"
            .form-group
              = f.password_field :password_confirmation, placeholder: t('activerecord.attributes.user.password_confirmation') ,
                                  autocomplete: 'off', class: 'form-control'
            .form-group
              = f.submit t('sign_up'), class: 'btn btn-primary'

          = render 'devise/shared/links'
%footer.text-center
  .footer-top
    .container
      .row
        .footer-col.col-md-6
          %h6
            = link_to t('affiliates'), affiliates_path
        .footer-col.col-md-6
          %h6
            = link_to t('about_us'),about_path
  .footer-below
    .container
      .row
        .col-md-12
          = t('rights')
