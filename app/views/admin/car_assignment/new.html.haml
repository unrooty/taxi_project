%h1.text-center #{t('assign_car')}
%h5#alert.text-center.error= alert
= form_for @car_assignment, url: {action: 'create'} do |form|
  .row.justify-content-md-center.text-center
    .col-md-4
      .order_form_area
        .form-group
          = form.collection_select :car_id, Car.all, :id, :car_info, {prompt: false}, {class: 'form-control'}
        %p
          = form.submit t('submit'), class: 'btn btn-primary'
